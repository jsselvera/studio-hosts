@model SS.DATA.EF.Reservation

@{
    ViewBag.Title = "Edit";
}

<h2 style="margin-left: 1%;">Edit:</h2>
@section css{

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="margin-left: 1%;">Reservation at @Html.DisplayFor(model => model.OwnerStudio.StudioName)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ReservationID)

        <div class="form-group">
            @Html.LabelFor(model => model.ReservationDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="ReservationDate" id="datepicker" class="form-control">
                @Html.ValidationMessageFor(model => model.ReservationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReservationTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReservationTime, new { htmlAttributes = new { @class = "timepicker form-control" } })
                @Html.ValidationMessageFor(model => model.ReservationTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OwnerStudioID, "OwnerStudioID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OwnerStudioID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OwnerStudioID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ArtistAssetID, "ArtistAssetID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ArtistAssetID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ArtistAssetID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="main_btn2" />
                <a href="~/Reservations/MyReservations/" class="main_btn2">Back</a>
            </div>
        </div>
    </div>
}

<div style="margin-bottom: 5%;">
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script>
    $('.timepicker').timepicker({
    timeFormat: 'HH:mm:ss',
    interval: 30,
    minTime: '8:00am',
    maxTime: '11:59pm',
    defaultTime: '11:30',
    dynamic: false,
    dropdown: true,
    scrollbar: true
});
    </script>
    }