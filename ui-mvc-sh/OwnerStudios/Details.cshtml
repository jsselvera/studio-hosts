@model SS.DATA.EF.OwnerStudio

@{
    ViewBag.Title = "Details";
}


<div class="container-fluid" style="background: #ffffff">
    <br />

<div class="container-fluid" style="height: 400px; z-index: 100; width:95%;">
    <div class="parallax" style="width: 100%;" data-parallax-image="/Content/Images/OwnerStudios/@Html.DisplayFor(model => model.StudioPhoto)">
    </div>
</div>
   
    <br />
   
    <div class="container" style="flex-direction: column;">
        <div class="row feature_inner box-shadow" style="border:solid; border-color:black; background: #ffffff;">
            <style>
                .studio-header{
                border: solid;
          border-color: #000000;
}
            </style>
            <h1 class="studio-header">@Html.DisplayFor(model => model.StudioName)</h1>

            <div class="col-lg-6 col-md-6" style="padding-left: 5%; padding-right: 5%;">
                <div class="feature_item">
                   
                    <h4><i class="lnr lnr-diamond"></i>Payment</h4>
                    <p>
                        Daily Reservation Limit: @Html.DisplayFor(model => model.ReservationLimit)
                    </p>

                    <p>
                        Hourly Rate: $@Html.DisplayFor(model => model.StudioRules).00
                    </p>
                </div>
            </div>

            <div class="col-lg-6 col-md-6" style="padding-left: 5%; padding-right: 5%;">
                <div class="feature_item">
                    <h4><i class="lnr lnr-location"></i>Location</h4>
                    <p>
                        @Html.DisplayFor(model => model.Address)
                    </p>
                    <p>
                        @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.ZipCode)
                    </p>
                </div>
            </div>

            

            <div class="col-lg-6 col-md-4" style="padding-left: 5%; padding-right: 5%;">
                <div class="feature_item">
                    <h4><i class="lnr lnr-briefcase"></i>Equipment</h4>
                    <p>@Html.DisplayFor(model => model.StudioAbout)</p>
                </div>
            </div> 

            <div class="col-lg-6 col-md-4">
                <div class="map-responsive" style="text-align: right; padding-right: 5%;">
                    <iframe src="@Html.DisplayFor(model => model.MapLink)" style="float: right; width: 90%" height="275" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
            <br />
            <p class="stu-p col-md-12" style="text-align: center; padding-top: 30px; padding-bottom: 20px;">
                <a href='@Url.Action("Create", "Reservations", new {id = Model.OwnerStudioID})' class="main_btn">Reserve Studio</a>
                |
                <a class="main_btn" href="~/OwnerStudios/Index">Back to List</a>
            </p>

            </div>
      

        </div>

    <br />
    <br />

       

    <br />

       

    </div>




@section css{
    
<link href="~/Content/css/universal-parallax.min.css" rel="stylesheet" />
    }
@section Scripts{
<script src="~/Content/js/universal-parallax.min.js"></script>
<script>
	new universalParallax().init();
</script>
}